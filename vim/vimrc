"""" save settings 
set confirm
set hidden
set autoread
set history=1000

"""" remove trailing whitespace for all files
autocmd BufWritePre <buffer> %s/\s\+$//e

"""" tab settings
set smarttab
set softtabstop=4 shiftwidth=4 expandtab

"""" syntax-specific settings
set colorcolumn=+1
autocmd FileType java setlocal textwidth=120
autocmd FileType javascript setlocal softtabstop=2 shiftwidth=2

""""" user interface settings
set ruler
set scrolloff=2
set sidescrolloff=5
set number relativenumber
set backspace=indent,eol,start
set lazyredraw

"""" search settings
set path+=**
set wildmenu
set wildignore+=**/build/**
set wildignore+=**/node_modules/**

"""" colors
syntax enable
set t_Co=256
set background=dark

"""" disable error bells
set noerrorbells
set novisualbell
set t_vb=
set tm=500

"""" file browser settings
let g:netrw_banner=0
let g:netrw_liststyle=3
let g:netrw_list_hide=',\(^\|\s\s\)\zs\.\S+'

"""" autocomplete
inoremap <Leader>c </<C-x><C-o>

"""" keyboard remaps
:let mapleader = ","
inoremap jj <ESC>
inoremap <Esc><BS> <C-w>
nnoremap <Leader><space> :noh<cr>

"""" faster window keys 
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

"""" search settings
set incsearch
set hlsearch
set ignorecase
set smartcase

"""" plugin settings 
" install vim-plug if not present
if empty(glob('~/.vim/autoload/plug.vim'))
  silent !curl -fLo ~/.vim/autoload/plug.vim --create-dirs
    \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
  autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif
call plug#begin('~/.vim/plugged')

" install plugins
" run :PlugInstall after adding a new one
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-repeat'
Plug 'tpope/vim-fugitive'
Plug 'dense-analysis/ale'
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'
Plug 'vim-airline/vim-airline'
Plug 'sheerun/vim-polyglot'
Plug 'dracula/vim', { 'as': 'dracula' }

" initialize plugin system
call plug#end()
filetype plugin indent on

" theme-specific
" to match background, set terminal to RGB(48,48,48)
let g:dracula_italic = 0
color dracula

"""" FZF search commands
nnoremap <C-p> :GFiles<CR>
nnoremap <Leader>b :Buffers<CR>
nnoremap <Leader>h :History<CR>
nnoremap <Leader>T :Tags<CR>

" requires OS installation of ripgrep
set grepprg=rg\ --vimgrep\ --smart-case\ --follow
nnoremap <C-f> :grep<space>
imap <C-f> <ESC><C-f>

""" ALE linter settings
" for eslint prettier, run npm install -g eslint-plugin-prettier prettier
nnoremap <Leader>n :lnext<CR>
nnoremap <Leader>m :lprevious<CR>
let g:ale_linters = {
\   'javascript': ['flow', 'eslint'],
\}
let g:ale_fixers = {
\    'javascript': ['eslint'],
\    'typescript': ['prettier', 'tslint'],
\    'scss': ['prettier'],
\    'html': ['prettier'],
\}
let g:ale_fix_on_save = 1

" airline settings
" set laststatus=2
" let g:airline_powerline_fonts=1
" let g:airline#extensions#tabline#enabled=1
